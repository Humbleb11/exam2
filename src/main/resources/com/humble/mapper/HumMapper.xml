<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.humble.mapper.HumMapper">
    <update id="update">
        update game.valorant
        <set>
            <if test="name !=null and name !=null and name !=''">
                name =#{name},
            </if>
        <if test="rank1 !=null ">
            rank1 =#{rank1},
        </if>
        <if test="capacity !=null ">
            capacity =#{capacity},
        </if>
        </set>
        where id =#{id}
    </update>
</mapper>